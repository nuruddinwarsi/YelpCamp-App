<% include ../partials/header %>

<div class="row">
<h1 style="text-align:center;"> Create new Campground</h1>
        <div style="width: 30%; margin:30px auto;">
                <form action="/campgrounds" method="POST" enctype="multipart/form-data">
                        <label for="name">Campground Name</label>
                        <div class="form-group">
                                <input class="form-control" type="text" placeholder="Cloud's Rest" name="name"
                                required>                                    
                        </div>
                        <label for="image">Image</label>
                        <div class="form-group">
                                <input class="form-control" type="file" id="image" name="image" accept="image/*"
                                required>                                        
                        </div>
                        <label for="description">Description</label>
                        <div class="form-group">
                                <input class="form-control" type="text" placeholder="Tell me more" name="description">
                        </div>
                        <label for="price">Price</label>
                        <div class="form-group">
                                <input class="form-control" type="number" placeholder="price" name="price" 
                                min="0.01" step="0.01" required>
                        </div>
                        <div class="form-group">
                                <button class="btn btn-lg btn-primary btn-block">Submit</button>                                            
                        </div>
                </form>
                <a href="/campgrounds">Go Back</a>
        </div>
</div>        

<% include ../partials/footer %>
